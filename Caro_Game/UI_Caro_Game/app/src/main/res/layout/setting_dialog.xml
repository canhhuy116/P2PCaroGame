<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SETTING"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#0175FF"

            ></TextView>

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"

            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:background="@drawable/ic_close_launcher_foreground"></ImageButton>

    </RelativeLayout>

   <LinearLayout
       android:layout_marginTop="0dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/shape"
       android:orientation="vertical"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sound"
           android:textSize="30dp"></TextView>
       <RadioGroup
           android:id="@+id/sound_group"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <RadioButton
               android:id="@+id/sound_on"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@android:color/transparent"
               android:background="@drawable/button_selector"
               android:textColor="@drawable/button_text_color"
               android:text="On"
               android:textSize="20dp"
               android:padding="20dp"
               android:checked="true"

               android:layout_marginLeft="25dp"
               ></RadioButton>
           <RadioButton
               android:id="@+id/sound_off"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@android:color/transparent"
               android:background="@drawable/button_selector"
               android:textColor="@drawable/button_text_color"
               android:textSize="20dp"
               android:text="Off"
               android:padding="20dp"
               android:layout_marginLeft="25dp"
               ></RadioButton>


       </RadioGroup>

   </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="30dp"

            ></TextView>
        <RadioGroup
            android:id="@+id/chat_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/chat_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:button="@android:color/transparent"
                android:background="@drawable/button_selector"
                android:textColor="@drawable/button_text_color"
                android:padding="20dp"
                android:checked="true"></RadioButton>
            <RadioButton
                android:id="@+id/chat_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:button="@android:color/transparent"
                android:background="@drawable/button_selector"
                android:textColor="@drawable/button_text_color"
                android:padding="20dp"></RadioButton>

        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOG OUT"
        ></Button>

</LinearLayout>