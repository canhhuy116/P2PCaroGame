<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_home"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    >
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/in_app_logo"
        android:layout_gravity="center"

        ></ImageView>
    <Button
        android:id="@+id/play_now"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Play Now"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:padding="6dp"
        android:background="@drawable/button"
        android:layout_gravity="center"
        ></Button>
    <Button
        android:id="@+id/play_with_friend"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Play with friend"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:padding="6dp"
        android:layout_gravity="center"
        ></Button>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="#F3FBFE">
        <ImageButton
            android:id="@+id/match_deactive_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/match_deactive"
            ></ImageButton>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_active"
            android:gravity="bottom|center"
            android:textColor="#44A1FF">
        </ImageButton>

        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/setting_icon"
            android:gravity="bottom|center"></ImageButton>
    </LinearLayout>
</LinearLayout>